@model CandyReview.Models.ReviewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="~/style/FormStyle.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Cantarell|Lobster&display=swap" rel="stylesheet">


</head>
<body>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <dl class="row formContainer">
            <div class="deleteGroup">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Content)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Content)
                </dd>
            </div>
            <div class="deleteGroup">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Reviewer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Reviewer)
                </dd>
            </div>
            <div class="deleteGroup">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Rating)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Rating)
                </dd>
            </div>
            <div class="deleteGroup">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Date)
                </dd>
            </div>
            <div class="deleteGroup">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductId)
                </dd>
            </div>
            <div>
                <form asp-action="Delete">
                    <input id="submitButton" type="submit" value="Delete" class="btn btn-danger" />
                    <input asp-for="ProductId" type="hidden" value="@Model.ProductId" />
                </form>
            </div>
        </dl>
        <a href="/Product/Index"><button>Back to Candy Reviews</button></a>


    </div>
</body>
</html>
